<h1>Edit Article</h1>

<%= form_with(model: @article, local: true) do |form| %>

<form>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row input-group-lg">
    <div class="col col-lg-4">
      <%= form.label :image %><br>
      <%= form.file_field :image %>
    </div>
  </div>
  <div class="form-group row input-group-lg">
    <div class="col col-lg-4">
      <%= form.label :title %><br>
      <%= form.text_field :title, :class => "form-control col-md-4" %>
    </div>
  </div>
  <div class="form-group row input-group-lg">
    <div class="col col-lg-6">
      <%= form.label :text %><br>
      <%= form.text_area :text, :class => "form-control", :rows => "5"%>
    </div>
  </div>
  <p>
    <%= form.submit :class => "button btn btn-primary btn-sm"%>
    <%= link_to 'Cancel', articles_path, :class => "button btn btn-danger btn-sm" %>
  </p>
</form>
<% end %>
