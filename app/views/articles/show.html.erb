
<div class="card" style="max-width: 100%">
  <div class="card-body" style="
      border: #E7E7E7;
      border-style: solid;
      border-radius: 2px;
      padding: 10px;
      margin: 10px 0px;">
    <% if @article.image.attached? %>
      <img src="<%= url_for(@article.image)%>">
    <% end %>
    <h4 class="card-title"><%= @article.title %></h4>
    <p class="card-subtitle mb-2 text-muted"><%= @article.text %></p>
  </div>
</div>
<%= link_to 'Back', articles_path, :class => "card-link btn btn-primary btn-sm" %>
<%= link_to 'Edit', edit_article_path(@article), :class => "card-link btn btn-warning btn-sm" %>
<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, :class => "card-link btn btn-danger btn-sm" %>

<h4>Comments</h4>
<%= render @article.comments %>

<h4>Add a comment:</h4>
<%= render 'comments/form' %>
